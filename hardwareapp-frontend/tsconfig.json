{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "module": "ESNext",
  "target": "ESNext",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "./*.d.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noUnusedLocals": true
  },
  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}
